<body>
    <div class="container">
        <div class="container   ">
            <h1 style="margin: 10px;" class="text-center" >Agregar Nuevo Municipio</h1>
        </div>
        <a style="margin: 10px;" href="/municipios" class="btn btn-secondary" type="button">regresar</a>
        <form action="/actualizarMunicipio/<%= municipio[0].idMunicipio %>" method="post" style="border-width: 1px; border-style: solid; border-radius: 5px; padding: 10px;">

            <div class="form-group">
                <label class="h2" for="nombre">nombre</label>
                <input id="nombreInput" class="form-control" type="text" name="nombre" value="<%= municipio[0].nombreMunicipio %>">
            </div>

            <div class="form-group">
                <label class="h2" for="telefono">c√≥digo</label>
                <input id="codigoInput" class="form-control" type="text" name="codigo" maxlength="4" onkeypress="return valideKey(event);" placeholder="1234" value="<%= municipio[0].codigoMunicipio%>">
            </div>


            <button style="margin-top: 10px;" class="btn btn-primary" type="submit">Agregar</button>
        </form>
    </div>

</body>
